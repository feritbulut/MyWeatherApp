<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWeatherApp.Resources.WelcomePage"
             Title="WelcomePage"
             BackgroundColor="#786fa6">
    <VerticalStackLayout>
        <StackLayout VerticalOptions="Center"
        Margin="20"
        Spacing="0">
            <Image Source="weathericon.png"
            HeightRequest="200"
            WidthRequest="200" 
            Margin="0,100,0,0"/>

            <Label Text="New simple weather app."
            FontSize="40"
            TextColor="White" />

            <Label Text="Thanks to this application, you can easily find out the weather of the city you want and your own location. It will never tire you with its simple design."
            TextColor="White"
            FontSize="Small" />
            
            <Button Text="Get Started"
            FontSize="Large"
            BackgroundColor="#ffca28"
            WidthRequest="250"
            Margin="0,50,0,0"
            x:Name="BtnGetStarted"
            Clicked="BtnGetStarted_Clicked"/>

            <Label Text="This application was developed by Ferit Bulut."
            TextColor="LightGray"
            FontSize="Small"
            Margin="0,100,0,0"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>